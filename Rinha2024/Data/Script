CREATE TABLE "Cliente" (
    "Id" integer GENERATED BY DEFAULT AS IDENTITY,
    "Limite" integer NOT NULL,
    "Saldo" integer NOT NULL,
    CONSTRAINT "PK_Cliente" PRIMARY KEY ("Id")
);


CREATE TABLE "Transacao" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Valor" integer NOT NULL,
    "Tipo" text NOT NULL,
    "Descriccao" text NOT NULL,
    "ClienteId" integer NOT NULL,
    "RealizadaEm" timestamp with time zone NOT NULL,
    CONSTRAINT "PK_Transacao" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Transacao_Cliente_ClienteId" FOREIGN KEY ("ClienteId") REFERENCES "Cliente" ("Id") ON DELETE CASCADE
);


INSERT INTO "Cliente" ("Id", "Limite", "Saldo")
VALUES (1, 100000, 0);
INSERT INTO "Cliente" ("Id", "Limite", "Saldo")
VALUES (2, 80000, 0);
INSERT INTO "Cliente" ("Id", "Limite", "Saldo")
VALUES (3, 1000000, 0);
INSERT INTO "Cliente" ("Id", "Limite", "Saldo")
VALUES (4, 10000000, 0);
INSERT INTO "Cliente" ("Id", "Limite", "Saldo")
VALUES (5, 500000, 0);


CREATE INDEX "IX_Transacao_ClienteId" ON "Transacao" ("ClienteId");


SELECT setval(
    pg_get_serial_sequence('"Cliente"', 'Id'),
    GREATEST(
        (SELECT MAX("Id") FROM "Cliente") + 1,
        nextval(pg_get_serial_sequence('"Cliente"', 'Id'))),
    false);


